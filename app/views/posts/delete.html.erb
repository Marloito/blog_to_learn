<h1>Are you sure you want to delete this post?</h1>

<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<form class="delete-post-button" action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <div>
    <input type="submit" value="Delete">
  </div>
</form>
