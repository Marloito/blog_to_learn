<h1>Edit Post</h1>

<form class="edit-post-form" action="/posts/<%=  %>" method="post">
  <div>
    <input type="text" name="title" value="<%= @post.title %>">
  </div>
  <div>
    <input type="text" name="body" value="<%= @post.body %>">
  </div>
  <div>
    <input type="submit" value="Save">
  </div>
</form>
